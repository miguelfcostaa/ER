          <script>

            function storeVar(el) {
                amount = el.getAttribute('value'); 

                console.log(amount);
            } 

            const form = document.getElementById('form-chamada');

            form.addEventListener('submit', async(e) =>{
                e.preventDefault();
                const user = amount;
                console.log('CONTACTO: ', user);
    
                try{
                    const res = await fetch('http://localhost:3000/ecraPrincipal/contactos',{
                        method: 'POST',
                        body: JSON.stringify({user}),
                        headers:{'Content-Type': 'application/json'}
                    });
                    const data = await res.json();
                    console.log('DATA: ',data);
                }catch(err){
                    console.log(err);
                }
                location.assign('/ecraPrincipal/chamada');
    
            });
    
        </script>
